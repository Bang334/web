extends ../../layout/default.pug 

block main
    .main-create
        h2 Thêm mới bạn nữ
        form(
            id="form-create" 
            action="/admin/products/create" 
            method="POST"
            enctype="multipart/form-data"
        )
            div 
                label(for="name") Nhap ten:
                input(id="name" name="name" placeholder="Nhap ten:" type="text" value="")
            div 
                label(for="job") Nhap cong viec:
                input(id="job" name="job" placeholder="VD: teacher" type="text" value="")
            div 
                label(for="image") Anh:
                input(id="image" name="image" type="file" value="" class="form-control-file" accept="image/*")
            div    
                label(for="des") Mo ta:
                textarea(name="des" id="des" cols="10" rows="5" value="")
            div 
                label(for="age") Nhap tuoi:
                input(id="age" name="age" placeholder="Nhap tuoi" type="number" value="0")
            div 
                label(for="price") Nhap gia:
                input(id="price" name="price" placeholder="0" type="number" value="0")    
            div 
                label(for="discount") Nhap % giam gia:
                input(id="discount" name="discount" placeholder="0" type="number" value="0") 
            div 
                label(for="stock") Nhap so hang:
                input(id="stock" name="stock" placeholder="0" type="number" value="0")    
            input(type="radio" id="active" name="status" value="active")
            label(for="active") Hoat dong
            input(type="radio" id="active" name="status" value="unactive")
            label(for="unactive") Khong Hoat Dong
            br
            button(id="button-submit") Lưu
        
        
